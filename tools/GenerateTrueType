#!/usr/bin/env fontforge
# $Id: GenerateTrueType,v 1.1 2005-12-01 12:40:47 peterlin Exp $
#
# Convert fonts from PfaEdit's native format to TrueType format

scriptname=$argv[0]

if ($argc > 1)
    i = 1;
    while ( i < $argc )
	Open($argv[i])
	ttfile = $fontname + ".ttf"
	Print("Converting ",ttfile)
	ScaleToEm(2048)
	Generate(ttfile)
	Close()
	i++
    endloop
else
    Print("Usage: ",scriptname," font.sfd [font.sfd ...]")
endif
