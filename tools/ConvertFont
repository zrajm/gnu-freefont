#!/usr/bin/pfaedit
# $Id: ConvertFont,v 1.1 2002-12-18 17:36:36 peterlin Exp $
#
# Convert fonts from PfaEdit's native format to TrueType format

if ($argc > 1)
    i = 1;
    while ( i < $argc )
	Open($argv[i])
	ttfile = $fontname + ".ttf"
	Print("Converting ",ttfile)
	Generate(ttfile)
	Close()
	i++
    endloop
else
    Print("Usage: $0 font.sfd [font.sfd ...]")
endif
