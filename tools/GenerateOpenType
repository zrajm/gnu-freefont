##!/usr/bin/env fontforge
# $Id: GenerateOpenType,v 1.2 2008-09-19 09:51:03 Stevan_White Exp $
#
# Convert fonts from FontForge's native SFD format to OpenType format
# First auto-hints whole font

scriptname=$argv[0];

if ( $argc > 1 )
    i = 1;
    while ( i < $argc )
	Open( $argv[i] )
	otfile = $fontname + ".otf"
	Print( "Generating OpenType file ", otfile )
	SelectAll()
	AutoHint()
	Generate( otfile, "", 0x800 )	# old-style kerning
	Close()
	i++
    endloop
else
    Print( "Usage: ", scriptname, " font.sfd [font.sfd ...]" )
endif
